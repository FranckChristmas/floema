extends ../base.pug 

block variables 
  - var template  = 'detail'

block content
  .detail 
    .detail__wrapper 
      figure.detail__media 
        img.detail__media__image(src=product.data.image.url alt=product.data.image.alt)

      .detail__information 
        p.detail__information__collection=product.data.collection.data.title 

        h1.detail__information__title=product.data.title 

        .detail__information__content 
          .detail__information__highlights 
            each highlight in product.data.highlights 
              p.detail__information__highlight
                if highlight.highlights_icon.toLowerCase() == 'arrow'
                  svg.detail__information__highlight__icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 41 41")
                    path(stroke="currentColor" fill="none" d="M-1166.33,520.33a20,20,0,0,1,20,20,20,20,0,0,1-20,20,20,20,0,0,1-20-20A20,20,0,0,1-1166.33,520.33Zm0,.5a19.5,19.5,0,0,1,19.5,19.5,19.5,19.5,0,0,1-19.5,19.5,19.5,19.5,0,0,1-19.5-19.5A19.5,19.5,0,0,1-1166.33,520.83Zm10.75,9-.66,2.36,0,2.59-1.93-2.31-2.31-1.93,2.59-.05Zm-20.51,20.51.66-2.36,0-2.59,1.93,2.31,2.31,1.93-2.59.05Zm4.6-4.6,11.31-11.31" transform="translate(1186.83 -519.83)")
                else
                  svg.detail__information__highlight__icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40")
                    path(fill="currentColor" stroke="currentColor" class="cls-1" d="M24.26,9.87l-2.76,8.59,8.72-2.63-8.15,4.14,8.15,4.26-8.72-2.82,2.82,8.91-4.27-8.34-4.14,8.15,2.63-8.72-8.59,2.76,8.15-4.2-8.34-4.33,8.78,2.82-2.82-8.78,4.33,8.34,4.2-8.15Z")
                    circle(fill="none" stroke="currentColor" class="cls-2" cx="20" cy="20" r="19.5")

                span.detail__information__highlight__text!=highlight.highlights_text.replace(/\n/, '<br>')
          
          .detail__information__list 
            each item in product.data.informations 
              p.detail__information__item
                strong.detail__information__item__title=item.informations_label
                span.detail__information__item__description=item.informations_description 

            a.detail__information__link(href=product.data.link_url.url target="_blank")=product.data.link_text 
                
    button.detail__button Close 
      svg.detail__button__icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 124 60")
